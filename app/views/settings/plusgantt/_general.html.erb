				<thead>
					<tr>
						<th style="width:180px"><%= l(:label_hollidays) %></th>
						<th style="width:100px"></th>
					</tr>
				</thead>
				<tbody>
				</tbody>
			</table>
		</td>
	</tr>
  </tbody>
